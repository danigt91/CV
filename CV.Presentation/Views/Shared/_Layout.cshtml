@using res = CV.Presentation.Resources.Shared;
<!DOCTYPE html>
<html ng-app="app" ng-controller="AppCtrl" 
      ng-init="$root.appName='@res.Shared.AppName'; 
      $root.technologyProvided='@res.Shared.TechnologyProvided';
      $root.autor = '@res.Shared.Autor'">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title ng-bind="title" ng-init="title='@ViewBag.Title'"></title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @Html.Action("MenuPublico", "App")
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>            
            <p>&copy; @DateTime.Now.Year - <span ng-bind="$root.footer"></span></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/angularApp")
    @RenderSection("scripts", required: false)
</body>
</html>
